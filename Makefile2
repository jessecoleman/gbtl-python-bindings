LANG		= -std=c++14
PICKY		= -Wall 
OPTS		= -O3 -march=native -DNDEBUG -shared -fPIC
GB_SOURCE 	= /home/jessecoleman/graphpack/gbtl/src
GB_SOURCE2 	= /home/jessecoleman/graphpack/gbtl/src/src


CXX			= g++
CXXFLAGS	= $(OPTS) $(LANG) $(PICKY) 
PYBIND		= $(shell python3 -m pybind11 --includes)
PYEXT		= $(shell python3-config --extension-suffix)

pybind: binding.cpp
	$(CXX) $(CXXFLAGS) -DHAVE_CONFIG_H -DGB_USE_SEQUENTIAL -I. -I.. -I$(GP_SOURCE) -I$(GB_SOURCE2) $(PYBIND) -g -MT graphblas$(PYEXT) -MD -MP -MF .deps/binding.Tpo -o graphblas$(PYEXT) binding.cpp 
